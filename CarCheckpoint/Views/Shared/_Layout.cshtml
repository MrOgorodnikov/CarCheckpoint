<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Car checkpoint</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CAR CHECKPOINT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- <li>@Html.ActionLink("Home", "Index", "Home")</li> -->
                    <!-- WebController links -->
                    <li>@Html.ActionLink("All users", "GetAllUsers", "HTMLgetter")</li>
                    <li>@Html.ActionLink("Find", "Find", "HTMLgetter")</li>
                    <li>@Html.ActionLink("Log in", "LogIn", "HTMLgetter")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "HTMLgetter")</li>
                    <!-- <li>@Html.ActionLink("Help", "Index", "Help", new { area = "" })</li> -->
                </ul>
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Vladyslav Ogorodnikov and Mykhailo Tsion</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
